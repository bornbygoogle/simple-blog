if (loggedIn == true)
	form(action='/posts/'+ post._id, method='POST')
		.form-group
			label(for='title')
				input#title.form-control(type='text', placeholder='Title' name='title' value=post.title)
			textarea(id="theTextarea" placeholder="Content post" name="textArea")
				| #{post.text}
			input(type='text' name='tags' data-role="tagsinput" id="tags" class="form-control")
		input(type="submit", value="submit")
else
	if (posts)
		.row
			each post in posts
				p= title
				p= text
				p= author.username
				.row
					each tag in tags
						.col-sm-1.col-3
							a(href="/tags/" + tag._id) #{tag.tag}
	else
			p= post.title
			p= post.text
			p= post.author.username
			.row
				each tag in post.tags
					.col-sm-1.col-3
						a(href="/tags/" + tag._id) #{tag.tag}
