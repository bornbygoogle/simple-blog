if (loggedIn == true)
	form(action='/posts/', method='POST')
		.form-group
			.col-3
			label(for='title')
				input#title.form-control(type='text', placeholder='Title' name='title' value=post.title)
			.col-8
				textarea(id="theTextarea" placeholder="Content post" name="textArea" cols="200")
			.col-3
				input(type='text' name='tags' data-role="tagsinput" id="tags" class="form-control")
			.col-3
				input(type="submit", value="submit").btn.btn-primary
else
	p= 'You are not logged in !'
